# =============================================
# 生产环境配置示例
# 复制此文件为 application-prod.yml 并填入实际配置
# =============================================

server:
  port: 9090
  address: 0.0.0.0  # 绑定到所有网络接口
  servlet:
    context-path: /api
  forward-headers-strategy: framework
  host: YOUR_SERVER_IP  # 外部访问地址

spring:
  application:
    name: online-quiz-system

  datasource:
    driver-class-name: com.mysql.cj.jdbc.Driver
    url: jdbc:mysql://YOUR_DB_HOST:3306/quiz_system?useUnicode=true&characterEncoding=utf8&useSSL=false&serverTimezone=Asia/Shanghai&allowPublicKeyRetrieval=true
    username: YOUR_DB_USERNAME
    password: YOUR_DB_PASSWORD

  # Jackson配置
  jackson:
    date-format: yyyy-MM-dd HH:mm:ss
    time-zone: GMT+8
    serialization:
      write-dates-as-timestamps: false

  # 文件上传配置
  servlet:
    multipart:
      enabled: true
      max-file-size: 10MB
      max-request-size: 50MB
      file-size-threshold: 1KB

  # 邮件配置 - 生产环境
  mail:
    username: YOUR_EMAIL@qq.com       # TODO: 改成你的QQ邮箱
    password: YOUR_AUTH_CODE          # TODO: 改成你的邮箱授权码

# MyBatis Plus配置
mybatis-plus:
  mapper-locations: classpath:mapper/*.xml
  type-handlers-package: com.quiz.handler
  configuration:
    map-underscore-to-camel-case: true
    # 生产环境关闭SQL日志
    # log-impl: org.apache.ibatis.logging.stdout.StdOutImpl
    auto-mapping-behavior: full
    default-statement-timeout: 30
  global-config:
    db-config:
      id-type: auto

# JWT配置
jwt:
  secret: YOUR_JWT_SECRET_KEY_MUST_BE_AT_LEAST_256_BITS_LONG_FOR_HS256
  expiration: 604800 # 7天过期

# 日志配置 - 生产环境
logging:
  level:
    com.quiz: info
    root: warn
    org.springframework.security: warn
  pattern:
    console: "%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"

# 文件上传配置
file:
  upload:
    path: /www/wwwroot/uploads  # 生产环境文件上传路径
  base-url: https://your-domain.com  # 对外访问的完整域名

# Swagger配置 - 生产环境建议禁用
springdoc:
  api-docs:
    enabled: false
    path: /v3/api-docs
  swagger-ui:
    enabled: false
    path: /swagger-ui.html
  show-actuator: false
